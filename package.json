{
  "name": "web_taf_js_playwright",
  "version": "1.0.0",
  "description": "The initial web UI test automation framework (Node.js / Playwright)",
  "main": "index.js",
  "scripts": {
    "c": "npx playwright test --project=chromium",
    "c-h": "npx playwright test --project=chromium --headed",
    "all": "npx playwright test",
    "report": "npx playwright show-report",
    "repeat-5": "npx playwright test --repeat-each=5",
    "repeat-10": "npx playwright test --repeat-each=10",
    "ui": "npx playwright test --ui",
    "debug": "npx playwright test --project=chromium --debug",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Somatori/web_taf_js_playwright.git"
  },
